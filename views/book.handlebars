{{>navbar}}
<div class="container my-3">
  <div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="bg-light p-5 rounded shadow">
          <div class="card w-100">
            {{#with book}}
              <div class="card-header border-0 mb-4">
                <div class="">
                  <img src="/images/nocover.jpg" alt="" class="float-left mr-4 rounded">
                </div>
                <div class="">
                   <h1 class="card-title">{{TITLE}}</h1>
              <h2>{{AUTHOR.NAME}} {{AUTHOR.SURNAME}}</h2>
              </div>
              </div>
             <div class="card-body">
                  <h3>Summary</h3>
                  <p class="card-text">{{SUMMARY}}</p>
                  {{#if PREQUELS}}
                  <ul>
                    Prequels
                    {{#each PREQUELS}}
                    <li><a href="{{BOOKID}}">{{TITLE}}</a></li>
                    {{/each}}
                  </ul>
                  {{/if}}
                  {{/with}}

                  {{#if user.isAdmin}}
                  <a href='/book/edit/{{book.BOOKID}}' class="btn-primary p-1 rounded" style="text-decoration: none;">Edit book</a>
                  <a href='/book/delete/{{book.BOOKID}}' class="btn-primary p-1 rounded" style="text-decoration: none;">Delete book</a>
                  {{/if}}
              </div>
          </div>
        </div>
        
          {{#if user}}
          <div class="bg-light p-5 rounded shadow my-3">
            <div class="card-header mb-2">
            <h2>Leave a review</h2>
            </div>
            <div class="card-body">
            <form action="/api/comment" method="POST">
            <textarea name="content" id="content" cols="30" rows="10" class="mb-4 form-control border-0 bg-light shadow rounded" placeholder = "Review..."></textarea>
            <label for="stars">Stars</label>
            <select name="stars" id="stars">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <input type="submit" value="Submit"  class="btn-primary rounded float-right"/>
            </form>
            </div>
          </div>
            {{/if}}
          <!-- -->
           {{#if book.COMMENTS}}
           <h2>Comments</h2>
            {{#each book.COMMENTS}}
             <div class="bg-light p-5 rounded shadow mb-2">
          <div class="card w-100">
              <div class="card-header border-0 mb-4">
                <div class="">
                   <h1 class="card-text" style="font-size: 20px;">{{USERNAME}}</h1>
              </div>
              </div>
             <div class="card-body">  
                  <p class="">{{CONTENT}}</p>
                  <p>Stars : {{STARS}}</p>
                  <p>{{REVIEWTIME}}</p>
             </div>
          </div>
        </div>
                
                  {{/each}}
            {{/if}}

          <!-- -->
      </div>
  </div>
</div>