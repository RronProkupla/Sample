{{#section 'head'}}
  <link rel="stylesheet" type="text/css" href="/css/register.css" />
{{/section}}
{{> navbar}}
<div class="container">
  <div class="row py-4">
      <div class="col-lg-8 mx-auto text-white text-center">
        <h1 class="display-4">Register</h1>
      </div>
  </div>
  <div class="col-lg-8 mx-auto">
     <div class="bg-light p-5 rounded shadow">
      <form action='register' method='POST' class='basicForm input-group'>
        <input type='text' name='email' id='email' placeholder="Email" class="mb-4 form-control border-0 bg-light shadow rounded-pill" />
        <input type='password' name='password' placeholder="Password" id='password' class="mb-4 form-control border-0 bg-light shadow rounded-pill" />
        <br />
        <input type='submit' class="btn  rounded-pill shadow" value="Register"/>
      </form>
      <br />
      <small
        style="display: {{choose invalidErrDisplay 'none'}}; color: red"
        class="center"
      >
        Email or password is invalid. Password must be at least 8 characters.
      </small>
      <small
        style="display: {{choose emailErrDisplay 'none'}}; color: red"
        class="center"
      >
        Email has already been used.
      </small>
      <small
        style="display: {{choose successDisplay 'none'}}; color: green"
        class="center"
      >
        Account registered successfully.
      </small>
    </div>
    </div>
</div>